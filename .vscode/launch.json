{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current file",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "args": [
              "--quiet",
              "--no-skipped",
              "--no-capture",
              "--no-capture-stderr",
              "${file}"
            ]
          },
          {
            "name": "Python: @focus",
            "type": "python",
            "request": "launch",
            "module": "behave",
            "console": "integratedTerminal",
            "args": [
              "--quiet",
              "--no-skipped",
              "-t",
              "@focus",
              "--no-capture",
              "--no-capture-stderr",
              "${file}"
            ]
          }
    ]
}